/*
 * stylesheet for Speculum
 * John Jung
 */

/****************************************
 * INTRO PAGE                           *
 ****************************************/

div#header {
	position: relative;
	background: #918f88 url(../images/speculum-banner.jpg) no-repeat 0 0;
	color: white;
	height: 237px;
	border-bottom: 1px solid #888;
}
div#header img {
	padding: .5em;
}
div#header p {
	font-family: Verdana, sans-serif;
	font-size: .75em;
	line-height: 1.5em;
	color: black;
	padding: 0 1em;
}

h1 {
	font-family: Georgia, serif;
	background: #464339;
	color: #f8faf5;
	margin: 0;
	padding: 1px 5px 3px 5px;
	border-bottom: 1px solid #555;
}
div#content {
	background: #e8e5d7;
}
div#column1 {
	background: #f9f5ec;
	margin-right: 250px;
}
div#column2 {
	background: #e8e5d7;
	position: absolute;
	top: 0;
	right: 0;
	width: 250px;
}

div#column2 ul li {
	border-bottom: 1px solid #d0d0d0;
}
div#column2 a {
	display: block;
	text-align: center;
	font-family: Verdana, sans-serif;
	font-size: .7em;
	line-height: 1.5em;
	font-weight: bold;
	text-decoration: none;
	color: black;
	padding: 8px 10px;
}
div#column2 a:hover,
div#column2 a:active {
	background: #dcd9cc;
}
p#copyright {
	font-family: Arial, sans-serif;
	font-size: .6em;
	text-align: center;
	padding-top: 20px;
}
div.marqueerow {
	clear: both;
	padding: 10px 10px 0 10px;
}
div.marquee {
	position: relative;
	width: 49.5%;
	float: left;
}

div.marquee img {
	position: absolute;
	top: 0;
	left: 10px;
	padding: 1px;
	border: 1px solid #888;
}
div.marquee h2 {
	font-family: Arial;
	font-size: 1em;
	font-weight: bold;
	vertical-align: bottom;
	padding: 0 10px 0 72px;
}
div.marquee p {
	font-family: Georgia, serif;
	font-size: .8em;
	line-height: 1.45em;
	vertical-align: top;
	padding: 0 20px 10px 72px;
}

div.marquee h2 a:link {
	text-decoration: none;
	color: #c96312;
}
div.marquee h2 a:visited {
	color: #c96312;
	text-decoration: none;
}
div.marquee h2 a:hover,
div.marquee h2 a:active {
	text-decoration: underline;
}

	
